# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                     controllers.SWAPIController.index
GET        /graphql              controllers.SWAPIController.graphql(query: String, variables: Option[String], operation: Option[String])
POST       /graphql              controllers.SWAPIController.graphqlBody
GET        /render-schema        controllers.SWAPIController.renderSchema
GET        /playground           controllers.SWAPIController.playground

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
